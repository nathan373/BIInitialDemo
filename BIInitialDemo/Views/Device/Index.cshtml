 
<html data-ng-app="AngularJs_Module">
@{
    ViewBag.Title = "BI Initial Demo";
}
<body data-ng-controller="AngularJs_Controller">
    <img src="~/Images/blank.gif" alt="" width="1" height="10" />

    <table style='width:99%;  border-bottom:3px solid #3273d5;'>
        <tr>

            <td width="190">
                <table width="99%">
                    <tr>
                        <td>
                            Welcome Mr. {{MyName}}
                        </td>
                    </tr>
                </table>
            </td>
            <td class="style1" align="center">
                <h3>BI Initial Demo</h3>
            </td>
            <td align="right">
                <div>
                    Today Date is :
                    {{date | date:'yyyy-MM-dd'}}
                </div>

            </td>
        </tr>
    </table>

    <img src="~/Images/blank.gif" alt="" width="1" height="2" />
    <table id="tblContainer" style='width: 99%;table-layout:fixed;'>
        <tr>
            <td colspan="2">
                <table style="width: 99%; background-color:#FFFFFF; borderdashed 3px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#32607e; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td>
                            <h3> Manage Device Details Add/Edit and Delete Device Details</h3>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            <form novalidate name="f1" ng-submit="saveroomBooking()">
                                <table style="color:#9F000F;font-size:large" cellpadding="4" cellspacing="6">

                                    <tr>
                                        <td>
                                            <b>Device Group: </b>
                                        </td>

                                        <td>
                                            <input type="text" name="txtBookingID" ng-model="BookingID" value="0" style="background-color:tan" readonly />
                                            <br />

                                        </td>
                                        <td>
                                            <b>Device Id: </b>
                                        </td>

                                        <td>

                                            <select name="opSelect" id="opSelect" ng-model="RoomIDs">
                                                <option value="" selected>-- Select --</option>
                                                <option ng-repeat="option in HotelRoomData" value="{{option.RoomNo}}">{{option.RoomNo}}</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect.$error.required">Select Room!</span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <b> Start From : </b>
                                        </td>
                                        <td>
                                            <input type="date" name="txtBookedDateFR" ng-model="BookedDateFR" placeholder="YYYY-MM-DD" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtBookedDateFR.$error.required">Booking From Date required!</span>
                                        </td>

                                        <td>
                                            <b> End Time: </b>
                                        </td>
                                        <td>
                                            <input type="date" name="txtBookedDateTO" ng-model="BookedDateTO" placeholder="YYYY-MM-DD" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtBookedDateTO.$error.required">Booking To Date required!</span> 
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <b>Activation Status: </b>
                                        </td>

                                        <td>
                                            <select name="opSelect1" id="opSelect1" ng-model="BookingStatus">
                                                <option value="" selected>-- Select --</option>
                                                <option value="Free" >Online</option>
                                                <option value="Occupied" >Busy</option>
                                                <option value="Reserved">Offline</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect1.$error.required">Select Booking Status!</span>

                                        </td>
                                        <td>
                                            <b>Device Type : </b>
                                        </td>

                                        <td>
                                            <select name="opSelect2" id="opSelect2" ng-model="PaymentStatus">
                                                <option value="" selected>-- Select --</option>
                                                <option value="Online">Online</option>
                                                <option value="Busy">Busy</option>
                                                <option value="Offline">Offline</option>
                                            </select>
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.opSelect2.$error.required">Select Booking Status!</span>

                                        </td>


                                    </tr>

                                    <tr>
                                        <td>
                                            <b>Advance Settings: </b>
                                        </td>

                                        <td>

                                            <input type="text" name="txtAdvancePayed" ng-model="AdvancePayed" value="" placeholder="" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtAdvancePayed.$error.required">Advance Payed required!</span>

                                        </td>

                                        <td>
                                            <b>Battery Status </b>
                                        </td>

                                        <td>

                                            <input type="text" name="txtTotalAmountPayed" ng-model="TotalAmountPayed" value="" placeholder="" required />
                                            <br />
                                            <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.txtTotalAmountPayed.$error.required">Total Amount Payed required!</span>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="4">
 
                                            <input type="submit" value="Save" style="background-color:#3d6380;color:#FFFFFF" required />
                                   
                                             
                                        </td>
                                    </tr>

                                </table>

                            </form>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2">

                <table style="width: 99%; background-color:#FFFFFF; border solid 2px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">

                    <tr style="height: 30px; background-color:#659EC7 ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td width="40" align="center"><b>Edit</b></td>
                        <td width="40" align="center"><b>Delete</b></td>
                        <td width="60" align="center"><b>Room No </b></td>
                        <td width="80" align="center"><b>Booked From</b></td>
                        <td width="80" align="center"><b>Booked To</b></td>
                        <td width="90" align="center"><b>Booking Status</b></td>
                        <td width="80" align="center"><b>Paid</b></td>
                        <td width="80" align="center"><b>Advance</b></td>
                        <td width="80" align="center"><b>Total</b></td>
                    </tr>
                    <tbody data-ng-repeat="details in RoomBookingData">
                        <tr>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">
                                    <img src="~/Images/edit.gif" alt="Edit" width="24px" height="24px" ng-click="roomBookingEdit(details.BookingID, details.RoomID ,  details.BookedDateFR,  details.BookedDateTO, details.BookingStatus , details.PaymentStatus, details.AdvancePayed, details.TotalAmountPayed)">

                                </span>
                            </td>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">
                                    <img src="~/Images/delete.gif" alt="Delete" width="24px" height="24px" ng-click="roomBookingDelete(details.BookingID)">
                                </span>
                            </td>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomID}}</span>
                            </td>

                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookedDateFR}}</span>
                            </td>

                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookedDateTO}}</span>
                            </td>
                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.BookingStatus}}</span>
                            </td>
                            <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.PaymentStatus}}</span>
                            </td>
                            <td valign="top" align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.AdvancePayed}}</span>
                            </td>
                            <td valign="top" align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.TotalAmountPayed}}</span>
                            </td>
                           
                        </tr>
                    </tbody>
                </table>

            </td>
        </tr>

    </table>
    <img src="~/Images/blank.gif" alt="" width="1" height="2" />
    <table style='width: 99%;table-layout:fixed;'>
        <tr>
            <td colspan="2">
                <table style="width: 99%; background-color:#FFFFFF; border dashed 3px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#45623d ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td>
                            <h3> Manage Device Details</h3>
                        </td>

                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top">
                <form novalidate name="f2" ng-submit="saveRoom()">
                    <table style="color:#9F000F;font-size:large" cellpadding="4" cellspacing="6">

                        <tr>
                            <td>
                                <b>Device Group ID: </b>
                            </td>
                            <td>
                                <input type="text" name="txtRoomID" ng-model="RoomID" value="0" style="background-color:tan" readonly />
                                <br />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b> Device Id : </b>
                            </td>
                            <td>
                                <input type="text" name="txtRoomNo" ng-model="RoomNo" placeholder="DeviceNo ..." required />
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.txtRoomNo.$error.required">Room No required!</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Device Type : </b>
                            </td>
                            <td>
                                <select name="opSelect4" id="opSelect4" ng-model="RoomType">
                                    <option value="" selected>-- Select --</option>
                                    <option value="Sensor">Sensor</option>
                                    <option value="GPS">GPS</option>
                                    <option value="Andriod">Andriod</option>
                                    <option value="Ios">Ios</option>
                                    <option value="Windows">Windows</option>
                                </select>
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.opSelect4.$error.required">Select Room Type!</span>
                                <br />
                            </td>
                        <tr>
                            <td>
                                <b> Connection Way : </b>
                            </td>
                            <td>
                                <input type="text" name="txtPrize" ng-model="Prize" value="0$" placeholder="..." required />
                                <br />
                                <span class="error" ng-show="(f2.file.$dirty || IsFormSubmitted2) && f2.txtPrize.$error.required">Device No required!</span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="submit" value="Save Album" style="background-color:#407531;color:#FFFFFF" required />
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
            <td valign="top">
                <table style="width: 98%; background-color:#FFFFFF;bordersolid 2px #6D7B8D; padding 5px;table-layout:fixed;" cellpadding="2" cellspacing="2">
                    <tr style="height: 30px; background-color:#82ae76 ; color:#FFFFFF ;border: solid 1px #659EC7;">
                        <td width="70" align="center"><b>Group NO </b></td>
                        <td width="200" align="center"><b>Device Type</b></td>
                        <td width="70" align="center"><b>Data</b></td>
                    </tr>
                    <tbody data-ng-repeat="details in HotelRoomData">
                        <tr>

                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomNo}}</span>
                            </td>
                            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.RoomType}}</span>
                            </td>
                            <td align="right" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                                <span style="color:#9F000F">{{details.Prize}}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>

<script src="~/Scripts/Library/angular.js"></script>
<script src="~/Scripts/Library/angular.min.js"></script>
<script src="~/Scripts/Library/angular-animate.js"></script>
<script src="~/Scripts/Library/angular-animate.min.js"></script>
<script src="~/Scripts/MYAngular/controller.js"></script>
